<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--
        add/create:跳转到添加页，或者打开添加操作的模态窗口
        save：执行添加操作
        edit：跳转到修改页，或者打开修改操作的模态窗口
        update：执行修改操作
        get:执行查询操作 select/find
        特殊操作：login等
    -->

    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.crm.web.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.crm.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    
    <listener>
        <listener-class>com.crm.web.listener.SysInitListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>userController</servlet-name>
        <servlet-class>com.crm.settings.web.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userController</servlet-name>
        <url-pattern>/settings/user/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>activityController</servlet-name>
        <servlet-class>com.crm.workbench.web.controller.ActivityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>activityController</servlet-name>
        <url-pattern>/workbench/activity/getUserList.do</url-pattern>
        <url-pattern>/workbench/activity/save.do</url-pattern>
        <url-pattern>/workbench/activity/pageList.do</url-pattern>
        <url-pattern>/workbench/activity/delete.do</url-pattern>
        <url-pattern>/workbench/activity/getUserListAndActivity.do</url-pattern>
        <url-pattern>/workbench/activity/update.do</url-pattern>
        <url-pattern>/workbench/activity/detail.do</url-pattern>
        <url-pattern>/workbench/activity/getRemarkListByAid.do</url-pattern>
        <url-pattern>/workbench/activity/deleteRemark.do</url-pattern>
        <url-pattern>/workbench/activity/saveRemark.do</url-pattern>
        <url-pattern>/workbench/activity/updateRemark.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>clueController</servlet-name>
        <servlet-class>com.crm.workbench.web.controller.ClueController</servlet-class>
    </servlet>
    <servlet-mapping>
    <servlet-name>clueController</servlet-name>
        <url-pattern>/workbench/clue/getUserList.do</url-pattern>
        <url-pattern>/workbench/clue/save.do</url-pattern>
        <url-pattern>/workbench/clue/detail.do</url-pattern>
        <url-pattern>/workbench/clue/getActivityListByClueId.do</url-pattern>
        <url-pattern>/workbench/clue/unbund.do</url-pattern>
        <url-pattern>/workbench/clue/getActivityListByNameAndNotByClueId.do</url-pattern>
        <url-pattern>/workbench/clue/bund.do</url-pattern>
        <url-pattern>/workbench/clue/getActivityListByName.do</url-pattern>
        <url-pattern>/workbench/clue/convert.do</url-pattern>
        <url-pattern>/workbench/clue/getClueById.do</url-pattern>
        <url-pattern>/workbench/clue/pageList.do</url-pattern>
        <url-pattern>/workbench/clue/update.do</url-pattern>
        <url-pattern>/workbench/clue/delete.do</url-pattern>
        <url-pattern>/workbench/clue/getRemarkListByClueId.do</url-pattern>
        <url-pattern>/workbench/clue/saveRemark.do</url-pattern>
        <url-pattern>/workbench/clue/updateRemark.do</url-pattern>
        <url-pattern>/workbench/clue/deleteRemark.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>tranController</servlet-name>
        <servlet-class>com.crm.workbench.web.controller.TranController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tranController</servlet-name>
        <url-pattern>/workbench/transaction/add.do</url-pattern>
        <url-pattern>/workbench/transaction/getCustomerName.do</url-pattern>
        <url-pattern>/workbench/transaction/save.do</url-pattern>
        <url-pattern>/workbench/transaction/detail.do</url-pattern>
        <url-pattern>/workbench/transaction/getHistoryListByTranId.do</url-pattern>
        <url-pattern>/workbench/transaction/changeStage.do</url-pattern>
        <url-pattern>/workbench/transaction/getCharts.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cusController</servlet-name>
        <servlet-class>com.crm.workbench.web.controller.CusController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cusController</servlet-name>
        <url-pattern>/workbench/customer/getUserList.do</url-pattern>
        <url-pattern>/workbench/customer/save.do</url-pattern>
        <url-pattern>/workbench/customer/pageList.do</url-pattern>
        <url-pattern>/workbench/customer/edit.do</url-pattern>
        <url-pattern>/workbench/customer/update.do</url-pattern>
        <url-pattern>/workbench/customer/delete.do</url-pattern>
        <url-pattern>/workbench/customer/detail.do</url-pattern>
        <url-pattern>/workbench/customer/getRemarkListByCid.do</url-pattern>
        <url-pattern>/workbench/customer/deleteRemark.do</url-pattern>
        <url-pattern>/workbench/customer/saveRemark.do</url-pattern>
        <url-pattern>/workbench/customer/updateRemark.do</url-pattern>
        <url-pattern>/workbench/customer/getTransactionListByCid.do</url-pattern>
        <url-pattern>/workbench/customer/deleteTransactionById.do</url-pattern>
        <url-pattern>/workbench/customer/getContactListByCid.do</url-pattern>
        <url-pattern>/workbench/customer/deleteContactById.do</url-pattern>
        <url-pattern>/workbench/customer/getCustomerName.do</url-pattern>
        <url-pattern>/workbench/customer/saveContact.do</url-pattern>
    </servlet-mapping>
</web-app>